{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Full Stack (Kill & Start)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "127.0.0.1",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "preLaunchTask": "Start Frontend",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}